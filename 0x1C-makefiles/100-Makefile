# Variables
NAME = school
CC = gcc
CFLAGS = -Wall -Werror -Wextra -pedantic
SRC = main.c school.c
OBJ = $(SRC:.c=.o)

# Rules
all: $(NAME)

$(NAME): $(OBJ)
	$(CC) $(OBJ) -o $@

clean:
	-@rm -f $(NAME) *~ $(OBJ)

fclean: clean

re: fclean all

%.o: %.c
	$(CC) $(CFLAGS) -c $< -o $@

-include m.h

.PHONY: all clean fclean re

